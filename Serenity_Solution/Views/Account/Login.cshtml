      flex-direction: column;
      justify-content: center;
    }

    .brand {
      color: #3b82f6;
      font-weight: bold;
    }

    .subtitle {
      margin: 10px 0 20px;
      color: #4b5563;
    }

    .login-form {
      display: flex;
      flex-direction: column;
    }

    .login-form label {
      font-size: 14px;
      margin-top: 10px;
      margin-bottom: 5px;
    }

    .login-form input {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .options {
      display: flex;
      justify-content: space-between;
      margin: 10px 0;
      font-size: 14px;
    }

    .options a {
      text-decoration: none;
      color: #0284c7;
    }

    .buttons {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .btn-primary {
      padding: 10px 20px;
      background-color: #0ea5e9;
      border: none;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn-outline {
      padding: 10px 20px;
      border: 1px solid #0ea5e9;
      color: #0ea5e9;
      background: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .login-google {
      margin-top: 20px;
      font-size: 14px;
    }

    .login-google a {
      color: #0ea5e9;
      text-decoration: none;
    }

    .login-right {
      flex: 1;
      background-color: #b2e1dd;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
      text-align: center;
    }

    .login-right img {
      max-width: 80%;
      height: auto;
      margin-bottom: 20px;
    }

    .login-right p {
      color: #333;
      font-size: 16px;
    }
</style>
