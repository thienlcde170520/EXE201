@model Serenity_Solution.Models.CustomerDashboardViewModel
@{
    ViewData["Title"] = "Trang quản lý";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-color: #527C88;
        --primary-dark: #3a5862;
        --text-color: #2c3e50;
        --light-text: #6c757d;
        --danger-color: #dc3545;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --card-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .dashboard-container {
        background-color: #f5f7fa;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .dashboard-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        border-radius: 12px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: var(--card-shadow);
    }

    .welcome-text {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .dashboard-card {
        background-color: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: var(--card-shadow);
        height: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        color: var(--primary-color);
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 1.2rem;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #eee;
        padding-bottom: 0.8rem;
    }

        .card-title i {
            margin-right: 0.5rem;
            font-size: 1rem;
        }

    .stat-card {
        text-align: center;
        padding: 1.5rem;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: var(--light-text);
        font-size: 0.95rem;
    }

    .appointment-item {
        padding: 1rem;
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s;
    }

        .appointment-item:last-child {
            border-bottom: none;
        }

        .appointment-item:hover {
            background-color: #f9fafb;
        }

    .appointment-date {
        font-size: 0.85rem;
        color: var(--light-text);
    }

    .appointment-doctor {
        font-weight: 600;
        margin: 0.3rem 0;
        color: var(--text-color);
    }

    .appointment-status {
        display: inline-block;
        padding: 0.25rem 0.7rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-upcoming {
        background-color: rgba(255, 193, 7, 0.1);
        color: var(--warning-color);
    }

    .status-completed {
        background-color: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
    }

    .status-cancelled {
        background-color: rgba(220, 53, 69, 0.1);
        color: var(--danger-color);
    }

    .action-btn {
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
        }

    .user-info {
        display: flex;
        align-items: center;
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 1rem;
        border: 3px solid rgba(255, 255, 255, 0.3);
    }

    .notification-item {
        padding: 1rem;
        border-bottom: 1px solid #eee;
        display: flex;
        align-items: flex-start;
    }

        .notification-item:last-child {
            border-bottom: none;
        }

    .notification-icon {
        background-color: rgba(82, 124, 136, 0.1);
        color: var(--primary-color);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .notification-content {
        flex-grow: 1;
    }

    .notification-title {
        font-weight: 600;
        margin-bottom: 0.3rem;
        color: var(--text-color);
    }

    .notification-text {
        color: var(--light-text);
        font-size: 0.9rem;
        margin-bottom: 0.3rem;
    }

    .notification-time {
        color: var(--light-text);
        font-size: 0.8rem;
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .action-link {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
        text-decoration: none;
        color: var(--text-color);
        font-weight: 600;
        transition: all 0.2s;
    }

        .action-link:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-3px);
        }

    .action-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: rgba(82, 124, 136, 0.1);
        color: var(--primary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        transition: all 0.2s;
    }

    .action-link:hover .action-icon {
        background-color: white;
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .welcome-text {
            font-size: 1.5rem;
        }

        .quick-actions {
            grid-template-columns: 1fr;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
        }
    }
</style>

<div class="dashboard-container">
    <div class="container">
        <!-- Header -->
        <div class="dashboard-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="user-info">
                        <img src="@(string.IsNullOrEmpty(Model.Customer.ProfilePictureUrl) ? "https://via.placeholder.com/60x60" : Model.Customer.ProfilePictureUrl)"
                             alt="User Avatar" class="user-avatar">
                        <div>
                            <div class="welcome-text">Xin chào, @Model.Customer.FullName!</div>
                            <p class="mb-0">Chào mừng bạn đến với trang quản lý cá nhân</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href="@Url.Action("CustomerProfile", "Account")" class="action-btn btn-primary">
                        <i class="fas fa-user-edit me-2"></i> Hồ sơ cá nhân
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Thống kê -->
            <div class="col-md-4">
                <div class="dashboard-card stat-card">
                    <div class="stat-value">@Model.TotalAppointments</div>
                    <div class="stat-label">Tổng số cuộc hẹn</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card stat-card">
                    <div class="stat-value">@Model.RecentAppointments.Count(a => a.Status == "Completed")</div>
                    <div class="stat-label">Cuộc hẹn đã hoàn thành</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="dashboard-card stat-card">
                    <div class="stat-value">@Model.RecentAppointments.Count(a => a.Status == "Upcoming")</div>
                    <div class="stat-label">Cuộc hẹn sắp tới</div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <!-- Cuộc hẹn gần đây -->
            <div class="col-lg-8">
                <div class="dashboard-card">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-check"></i>
                        Cuộc hẹn gần đây
                    </h3>

                    @if (Model.RecentAppointments.Any())
                    {
                        foreach (var appointment in Model.RecentAppointments)
                        {
                            <div class="appointment-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="appointment-date">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @appointment.Scheduled_time.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                        <div class="appointment-doctor">
                                            BS. @(appointment.Psychologist?.Name ?? "Chưa xác định")
                                        </div>
                                        <div>
                                            @{
                                                string statusClass = appointment.Status switch
                                                {
                                                    "Upcoming" => "status-upcoming",
                                                    "Completed" => "status-completed",
                                                    "Cancelled" => "status-cancelled",
                                                    _ => ""
                                                };

                                                string statusText = appointment.Status switch
                                                {
                                                    "Upcoming" => "Sắp diễn ra",
                                                    "Completed" => "Đã hoàn thành",
                                                    "Cancelled" => "Đã hủy",
                                                    _ => appointment.Status
                                                };
                                            }
                                            <span class="appointment-status @statusClass">@statusText</span>
                                        </div>
                                    </div>
                                    <div>
                                        <a asp-controller="Doctor" asp-action="Detail" asp-route-Id="@appointment.Psychologist_ID" class="action-btn btn-primary">
                                            <i class="fas fa-eye me-1"></i> Chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <p>Bạn chưa có cuộc hẹn nào.</p>
                        </div>
                    }

                    <div class="text-center mt-3">
                        <a href="#" class="action-btn btn-primary">
                            <i class="fas fa-calendar-plus me-2"></i> Đặt lịch mới
                        </a>
                    </div>
                </div>
            </div>

            <!-- Thao tác nhanh -->
            <div class="col-lg-4">
                <div class="dashboard-card">
                    <h3 class="card-title">
                        <i class="fas fa-bolt"></i>
                        Thao tác nhanh
                    </h3>
                    <div class="quick-actions">
                        <a asp-controller="Doctor" asp-action="Index" class="action-link">
                            <div class="action-icon">
                                <i class="fas fa-calendar-plus"></i>
                            </div>
                            <span>Đặt lịch hẹn</span>
                        </a>
                        <a href="#" class="action-link">
                            <div class="action-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <span>Lịch sử cuộc hẹn</span>
                        </a>
                        <a asp-controller="Doctor" asp-action="Index" class="action-link">
                            <div class="action-icon">
                                <i class="fas fa-user-md"></i>
                            </div>
                            <span>Bác sĩ</span>
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="action-link">
                            <div class="action-icon">
                                <i class="fas fa-headphones"></i>
                            </div>
                            <span>Liên hệ hỗ trợ</span>
                        </a>
                    </div>
                </div>

                <!-- Thông báo -->
                <div class="dashboard-card mt-4">
                    <h3 class="card-title">
                        <i class="fas fa-bell"></i>
                        Thông báo
                    </h3>

                    @if (Model.Notifications.Any())
                    {
                        foreach (var notification in Model.Notifications)
                        {
                            <div class="notification-item">
                                <div class="notification-icon">
                                    <i class="fas fa-info"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">@notification.Title</div>
                                    <div class="notification-text">@notification.Content</div>
                                    <div class="notification-time">@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                            <p>Bạn chưa có thông báo nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome -->
