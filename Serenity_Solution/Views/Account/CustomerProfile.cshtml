@model CustomerViewModel
@{
    ViewBag.Title = "Customer Profile";
}

<style>
    .profile-container {
        background: linear-gradient(135deg, #527C88 0%, #3a5862 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 3rem 2rem;
        margin: 2rem auto;
        max-width: 600px;
    }

    .profile-picture-wrapper {
        position: relative;
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .profile-picture {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        border: 6px solid #fff;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .profile-picture:hover {
            transform: scale(1.05);
        }

    .profile-title {
        text-align: center;
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 2rem;
        font-size: 2.2rem;
    }

    .profile-info {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;
        margin-top: 1.5rem;
    }

    .info-row {
        display: flex;
        align-items: center;
        padding: 0.8rem 0;
        border-bottom: 1px solid #e9ecef;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 700;
        color: #2c3e50;
        width: 160px;
        display: flex;
        align-items: center;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        color: #2c3e50;
        flex: 1;
        font-size: 1rem;
    }

    .info-icon {
        margin-right: 0.5rem;
        color: #527C88;
        width: 18px;
    }

    .btn-edit {
        background: linear-gradient(135deg, #527C88 0%, #3a5862 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: block;
        margin: 2rem auto 0;
        text-decoration: none;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(82, 124, 136, 0.4);
            color: white;
        }
