@model PsychologistViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <!-- Header -->
    <header>
        <nav>
            <a href="#" class="nav-link">Hồ Sơ</a>
            <a href="#" class="nav-link">Sự Nghiệp</a>
        </nav>
    </header>

    <!-- Profile Section -->
    <div class="profile-section">
        <div class="profile-details">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-pic" />
            <h1>@Model.Name</h1>
            <p class="role">Hồ sơ nhân viên</p>
            <ul>
                <li><span class="icon">👤</span> Chức vụ: Chuyên gia</li>
                <li><span class="icon">🏢</span> Kinh nghiệm: @Model.Experience</li>
                <li><span class="icon">💼</span> Email: @Model.Email</li>
                <li><span class="icon">📍</span> Nơi ở: @Model.Address</li>
            </ul>
            <div class="tabs">
                <button class="tab active">Giới thiệu</button>
                <button class="tab">Kinh nghiệm</button>
                <button class="tab">Bằng cấp</button>
            </div>
            <div class="intro-section">
                <div class="intro">
                    <h3>Giới thiệu chuyên gia</h3>
                    <p>@Model.Description</p>
                </div>
                <div class="intro">
                    <h3>Kinh nghiệm làm việc</h3>
                    <p>@Model.Experience</p>
                </div>
                <div class="intro">
                    <h3>Bằng cấp</h3>
                    <p>@Model.Degree</p>
                </div>
                <div class="intro">
                    <h3>Chuyên gia khác</h3>
                    <!-- Có thể thêm danh sách chuyên gia khác nếu cần -->
                </div>
            </div>
        </div>
        <div class="order-section">
            <div class="order-box">
                <p><span class="icon">🔒</span> Gói một phút: @Model.Price.ToString("N0") VNĐ/60 Phút</p>
                <button class="order-button">Đặt lịch ngay</button>
            </div>
        </div>
    </div>

    <section class="contact-form">
        <div class="container">
            <h2>📩 Tương tác với chúng tôi</h2>
            <form asp-action="Contact" asp-controller="SendRequest" method="post" class="form">
                <input type="text" placeholder="Họ tên" name="name" />
                <input type="email" placeholder="Email" name="email" />
                <textarea placeholder="Nội dung" name="message"></textarea>
                <button>Gửi</button>
            </form>
        </div>
    </section>
</div>
