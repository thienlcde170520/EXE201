@model  Serenity_Solution.Models.ContactViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="search-section">
    <div class="search-container">
        <div class="search-tabs">
            <div class="tab active">
                <h3>Đặt câu hỏi</h3>
                <p>Đặt câu hỏi với chúng tôi</p>
                <div class="underline"></div>
            </div>
            <div class="tab">
                <h3>Kiểm tra sức khỏe nhanh</h3>
                <p>Kiểm tra nhanh tâm lý của bạn</p>
            </div>
        </div>
        @* <div class="search-box">
            <i class="search-icon">&#128269;</i>
            <input type="text" placeholder="Search" />
        </div> *@
    </div>
</div>
<div class="podcast-section">
    <h2 class="section-title">Podcast</h2>

    <div class="podcast-feature">
        <img src="~/image/Podcast/Main_Podcast.png" alt="Podcast Cover" class="podcast-img" />

        <div class="podcast-content">
            <h3 class="podcast-title">Hãy sống theo cách mình muốn</h3>
            <div class="controls">
                <button>
                    <i class="fi fi-rs-rewind"></i>
                </button>
                <button id="playBtn">
                    <i class="fi fi-rs-play"></i>
                </button>
                <button>
                    <i class="fi fi-rs-forward"></i>
                </button>
                <span class="rating">4.6 ★ (295)</span>
            </div>

            <script>
                const playBtn = document.getElementById('playBtn');
                const playIcon = playBtn.querySelector('i');
                let isPlaying = false;

                playBtn.addEventListener('click', () => {
                  isPlaying = !isPlaying;
                  playIcon.className = isPlaying ? 'fi fi-rs-pause' : 'fi fi-rs-play';
                });
            </script>



            <p class="description">
                Xin chào các bạn, mình là Trang và là founder của dự án viết Chữa Lành. Liệu pháp viết – Writing therapy là phương pháp sử dụng công cụ giấy và bút để có thể bày cảm xúc. Mình bắt đầu hành trình qua các khóa viết và dần cảm nhận được tinh thần tốt lên...
            </p>
        </div>
    </div>

    <div class="podcast-list-header">
        <a href="https://localhost:7029/Podcast/index">Xem tất cả</a>
    </div>

    <div class="podcast-list">
        <div class="podcast-card">
            <img src="~/image/Podcast/TimDenChuaLanhNhungBeTac.png" />
            <p>Tim đến chữa lành nhưng vẫn bế tắc</p>
        </div>
        <div class="podcast-card">
            <img src="~/image/Podcast/GiaiPhapA.png" />
            <p>Giải pháp A không thể giải quyết vấn đề B</p>
        </div>
        <div class="podcast-card">
            <img src="~/image/Podcast/NhungLoiMonCu.png" />
            <p>Những lời mòn cuộc sống</p>
        </div>
        <div class="podcast-card">
            <img src="~/image/Podcast/ThayViBangKhoan.png" />
            <p>Thay vì băng khoăn</p>
        </div>
        <div class="podcast-card">
            <img src="~/image/Podcast/VietChuaLanh.png" />
            <p>Vết chữa Lành</p>
        </div>
        <div class="podcast-card">
            <img src="~/image/Podcast/VuotQuaKhoKhan.png" />
            <p>Vược qua khó khăn</p>
        </div>
        <div class="podcast-card">
            <img src="~/image/Podcast/Main_Podcast.png" />
            <p>Hãy sống theo cách mình muốn</p>
        </div>
    </div>
</div>

