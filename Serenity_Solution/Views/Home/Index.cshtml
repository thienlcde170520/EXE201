<!-- Contact Section -->
<div class="contact-section">
    <h2 class="contact-title">
        📩 Tương tác với chúng tôi
    </h2>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <form asp-action="SubmitContact" asp-controller="Home" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" class="contact-form">
        <div class="form-group">
            <input type="hidden" asp-for="Contact.UserId" value="@Model.currentUser" />
            <input type="text" asp-for="Contact.Name" placeholder="Họ tên" class="form-input" required>
            <span asp-validation-for="Contact.Name"></span>
            <input type="email" asp-for="Contact.Email" placeholder="Email" class="form-input" required>
            <span asp-validation-for="Contact.Email"></span>
        </div>
        <textarea asp-for="Contact.Content" placeholder="Nội dung" class="form-textarea" required></textarea>
        @* <input type="hidden" name="psychologistId" value="@Model.Id" /> *@
        <button type="submit" class="submit-button">Gửi</button>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const askTab = document.getElementById('askTab');
        const contactSection = document.querySelector('.contact-section');

        askTab.addEventListener('click', function(e) {
            e.preventDefault();

            // Tính toán vị trí của phần contact
            const contactPosition = contactSection.getBoundingClientRect().top + window.pageYOffset;

            // Cuộn mượt xuống vị trí đó
            window.scrollTo({
                top: contactPosition,
                behavior: 'smooth'
            });
        });
    });
</script>

    <style >
    /* Contact Section */
    .contact-section {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        margin-top: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 20px;
    }

    .contact-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #5aa;
    }

    .contact-form {
        display: grid;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        gap: 1rem;
        width: 102%;
    }

    .form-input {
        padding: 0.875rem 1rem;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
        width: 100%;
    }


        .form-input:focus {
            outline: none;
            border-color: #52c234;
            box-shadow: 0 0 0 3px rgba(82, 194, 52, 0.1);
        }

    .form-textarea {
        padding: 0.875rem 1rem;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        min-height: 120px;
        resize: vertical;
        font-family: inherit;
        transition: all 0.3s ease;
        box-sizing: border-box;
        width: 100%; /* Đảm bảo textarea chiếm full width */
    }

        .form-textarea:focus {
            outline: none;
            border-color: #52c234;
            box-shadow: 0 0 0 3px rgba(82, 194, 52, 0.1);
        }

    .submit-button {
        background: #52c234;
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        justify-self: start;
        min-width: 120px;
    }

        .submit-button:hover {
            background: #4caf50;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(82, 194, 52, 0.3);
        }

    /* Alert Styles */
    .alert {
        padding: 12px 16px;
        margin: 16px 0;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Success Alert - Xanh + Tích */
    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

        .alert-success::before {
            content: "✓";
            color: #28a745;
            font-weight: bold;
            font-size: 16px;
        }

    /* Error Alert - Đỏ + X */
    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

        .alert-error::before {
            content: "✕";
            color: #dc3545;
            font-weight: bold;
            font-size: 16px;
        }

    
</style>
