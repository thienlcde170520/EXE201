@model List<PsychologistViewModel>
@{
    ViewData["Title"] = "Doctor Page";
}

<div class="search-section">
    <div class="search-container">
        <div class="search-tabs">
            <div class="tab active">
                <h3>Đặt câu hỏi</h3>
                <p>Đặt câu hỏi với chúng tôi</p>
                <div class="underline"></div>
            </div>
            <div class="tab">
                <h3>Kiểm tra sức khỏe nhanh</h3>
                <p>Kiểm tra nhanh tâm lý của bạn</p>
            </div>
        </div>
        <form method="get" asp-controller="Doctor" asp-action="Index" class="search-form">
            <div class="search-box">
                <i class="search-icon">&#128269;</i>
                <input type="text" name="searchString" placeholder="Search" value="@ViewBag.SearchString" />
                <button type="submit">Search</button>
            </div>
        </form>
    </div>
</div>

<main>
    <h2>Bác sĩ dành cho bạn</h2>
    <div class="filters">
        <form method="get" asp-action="Index">
            <button type="submit">Bộ lọc</button>
            <select name="filterType">
                <option value="">-- Chọn bộ lọc --</option>
                <option value="experience">Kinh nghiệm</option>
                <option value="priceAsc">Giá thấp đến cao</option>
                <option value="psychiatrist">Bác sĩ tâm thần</option>
                <option value="clinicalPsychologist">Nhà tâm lý học lâm sàng</option>
                <option value="counselor">Tư vấn viên tâm lý</option>
            </select>
        </form>
    </div>


    <div class="doctor-list">
        @if (Model != null && Model.Any())
        {
            @foreach (var doctor in Model)
            {
                <div class="doctor-card">
                    <div class="doctor-info">
                        <!-- Default avatar if no image available -->
                        <img src="@doctor.ProfilePictureUrl" alt="@doctor.Name" class="doctor-avatar" />
                        <div class="doctor-details">
                            <h3 class="doctor-name">@doctor.Name</h3>
                            <p class="doctor-specialty">Chuyên gia tâm lý</p>
                            <p class="doctor-location">📍@(string.IsNullOrEmpty(doctor.Address) ? "Chưa cập nhật địa chỉ" : doctor.Address)</p>
                            <p class="doctor-experience">🗓️ @(doctor.Experience ?? "Chưa cập nhật kinh nghiệm") năm</p>
                            @if (doctor.Description != null)
                            {
                                <p class="doctor-description">📝 @doctor.Description</p>
                            }
                            <p class="doctor-price">👥 Chi phí tư vấn: <strong>@(doctor.Price.ToString("N0") ?? "0") VND</strong></p>
                        </div>
                    </div>
                    <form asp-controller="Doctor" asp-action="Detail">
                        <input type="hidden" name="Id" value="@doctor.Id" />
                    <button class="contact-button" >Liên hệ ngay</button>
                    </form>
                    @*onclick="contactDoctor('@doctor.Id')"*@
                </div>
            }
        }
        else
        {
            <div class="no-doctors">
                <p>Hiện tại không có bác sĩ nào khả dụng.</p>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="pagination">
        @if (ViewBag.TotalPages > 1)
        {
            @if (ViewBag.CurrentPage > 1)
            {
                <a href="?page=@(ViewBag.CurrentPage - 1)" class="pagination-btn">&laquo;</a>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <button class="pagination-btn active">@i</button>
                }
                else
                {
                    <a href="?page=@i" class="pagination-btn">@i</a>
                }
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a href="?page=@(ViewBag.CurrentPage + 1)" class="pagination-btn">&raquo;</a>
            }
        }
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        var noWSDetail = '@(TempData["NoWSDetail"])';
        if (noWSDetail === 'True') {
            Swal.fire({
                title: 'Thông báo',
                text: 'Hiện chưa có yêu cầu xác nhận chứng chỉ nào',
                icon: 'warning',
                confirmButtonText: 'OK'
            });
        }
    });
</script>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    

    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

        main h2 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: #333;
        }

    .filters {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        align-items: center;
    }

        .filters button,
        .filters select {
            padding: 0.75rem 1.5rem;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .filters button:hover,
            .filters select:hover {
                border-color: #667eea;
                box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
            }

    .doctor-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .doctor-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

        .doctor-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

    .doctor-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex: 1;
    }

    .doctor-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #f0f0f0;
    }

    .doctor-details h3 {
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .doctor-details p {
        margin-bottom: 0.3rem;
        color: #666;
        font-size: 0.9rem;
    }

    .doctor-specialty {
        color: #667eea !important;
        font-weight: 600;
    }

    .doctor-description {
        color: #555 !important;
        font-style: italic;
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .doctor-price strong {
        color: #e74c3c;
        font-weight: 700;
    }

    .contact-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

        .contact-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
        }

    .no-doctors {
        text-align: center;
        padding: 3rem;
        color: #666;
        font-size: 1.1rem;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
    }

    .pagination-btn {
        padding: 0.75rem 1rem;
        border: 1px solid #e0e0e0;
        background: white;
        cursor: pointer;
        border-radius: 6px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: #333;
        display: inline-block;
    }

        .pagination-btn.active {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .pagination-btn:hover:not(.active) {
            background: #f8f9fa;
            border-color: #667eea;
        }
</style>

